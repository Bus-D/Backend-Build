    </section>


    <main class="portfolio-grid">
        <% featuredProjects.forEach(project => { %>
            <div class="portfolio-item">
                <a href="projects/<%= project.slug %>">
                    <img src="<%= project.image" alt="<%= project.name %>">
                    <h3><%= project.name %></h3>
                </a>
                <p><%= project.description %></p>
            </div>
        <% }); %>
    </main>

